<?php
    $args = array(
        'post_type' => 'portfolio-post',
        'category_name' => 'featured',
    );
    $the_query = new WP_Query( $args ); ?>

    <?php if ( $the_query->have_posts() ) : ?>

        <?php while ( $the_query->have_posts() ) : $the_query->the_post(); ?>


<!-- CONTENT GOES HERE -->


        <?php endwhile; ?>

<?php wp_reset_postdata(); ?>

<?php endif; ?>
